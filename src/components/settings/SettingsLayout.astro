---
import AppContainer from "@/components/app/AppContainer.astro";
import SettingsSidebar from "@/components/settings/SettingsSidebar.astro";
import Layout from "@/layouts/Layout.astro"

interface Props {
  name: string;
}

const { name } = Astro.props;
---

<Layout title={`Settings: ${name}`}>
  <AppContainer>
    <div class="w-1/3 lg:w-fit lg:min-w-64">
      <SettingsSidebar />
    </div>
    <div class="flex-1 p-2 sm:p-4">
      <h2 class="py-4 text-xl font-bold">{name}</h2>
      <slot />
    </div>
  </AppContainer>
</Layout>
